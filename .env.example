# Layer9 Production Configuration
# Copy this file to .env and update with your values

# Server Configuration
LAYER9_HOST=0.0.0.0
LAYER9_PORT=3000
LAYER9_HOT_RELOAD=false

# TLS Configuration (for HTTPS)
LAYER9_HTTPS=false
LAYER9_TLS_CERT=/path/to/cert.pem
LAYER9_TLS_KEY=/path/to/key.pem

# Database Configuration (if using SSR with database)
DATABASE_URL=postgres://user:password@localhost/layer9_db

# Application Configuration
RUST_LOG=layer9_server=info,tower_http=info
NODE_ENV=production

# Security
LAYER9_CORS_ORIGIN=https://yourdomain.com
LAYER9_SESSION_SECRET=your-secret-key-here

# Optional: CDN/Static Assets
LAYER9_STATIC_URL=https://cdn.yourdomain.com
LAYER9_ASSET_PREFIX=/static

# Optional: Analytics
LAYER9_ANALYTICS_ID=UA-XXXXXXXXX-X